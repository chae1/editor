add_library(engine STATIC engine.cpp)
target_include_directories(engine PUBLIC ${CMAKE_SOURCE_DIR})

target_link_libraries(engine PRIVATE fontInfo socketClient window)

include(FetchContent)
FetchContent_Declare(
  fmt
  GIT_REPOSITORY "https://github.com/fmtlib/fmt"
  GIT_TAG master
)
FetchContent_MakeAvailable(fmt)
target_link_libraries(engine PRIVATE fmt)

# Fetch Vulkan
FetchContent_Declare(
    Vulkan-Headers
    GIT_REPOSITORY https://github.com/KhronosGroup/Vulkan-Headers.git
    GIT_TAG        origin/main  # or any specific tag you want to use
)

FetchContent_MakeAvailable(Vulkan-Headers)
target_link_libraries(engine PRIVATE Vulkan-Headers)

